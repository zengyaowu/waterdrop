spark {
  # You can set spark configuration here

  # see available properties defined by spark: https://spark.apache.org/docs/latest/configuration.html#available-properties
  spark.app.name = "Waterdrop"
  spark.executor.instances = 2
  spark.executor.cores = 1
  spark.executor.memory = "1g"
}

input {

  # This is a example input plugin **only for test and demonstrate the feature input plugin**
  kafkaStream {
    consumer.bootstrap.servers = "127.0.0.1:9092"
    topics = "waterdrop_input"
    consumer.group.id = "waterdrop_input_group_id"
    result_table_name = "waterdrop_message"
  }
}

filter {

  sql {
      sql = "select string(value) as raw_message from waterdrop_message"
  }

  json {
    source_field = "raw_message"
    target_field = "jsonMap"
    schema_file = "demo.json"
    result_table_name = "flatten_msg"
  }

